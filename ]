#include<stdio.h>
#include<stdlib.h>

void print2Darray(int** arr,int rows,int cols){
	
	printf("the 2d array is ");

	for(int i=0;i<n;i++){
		for(int j=0;j<n;j++){
		
			printf("%d",arr[i][j]);
		}
	}
}

int main(){
	
	int rows,cols;
	printf("Enter the number of rows");
	scanf("%d",rows);

	printf("Enter the number of cols");
	scanf("%d",cols)

	//memory allocation in 2d array
	int**arr=(int**)malloc(size*(sizeof(int*)));
	for(int i=0;i<n;i++){
		arr[i]=(int*)malloc(colsizeof(int))
	}

	printf("Enter the elements in 2d array");
	for(int i=0;i<n;i++){
		for(int j=0;j<n;j++){
			scanf("%d",&arr[i][j]);
		}
	}


	print2darray(arr,rows,cols);

	for(int i=0;i<n;i++){
		free(arr[i]);
	}
	free(arr);





	return 0;
}
